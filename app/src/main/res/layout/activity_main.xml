<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fm_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_ground_floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_media_play_view"
        android:layout_width="300dp"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/discbg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/fm_disc_bg" />


    <ImageView
        android:id="@+id/needle"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/fm" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="80dp"
        android:background="@color/deep_grey_400"
        android:orientation="vertical">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingStart="30dp"
            android:text="@string/FM"
            android:textColor="@color/grey_1000w"
            android:textSize="@dimen/symbol_textSize"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FMChannelnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="25dp"
                    android:text="@string/num"
                    android:textColor="@color/grey_1000w"
                    android:textSize="@dimen/FMChannelnum_textSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/FMCollectStatus_ImageView_padding"
                    android:src="@drawable/ic_action_not_start" />

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="@dimen/FMCollectStatus_TextView_layout_width"
                    android:layout_height="@dimen/FMCollectStatus_TextView_layout_height"
                    android:gravity="center"
                    android:text="MHz"
                    android:textColor="@color/grey_1000w"
                    android:textSize="@dimen/FMCollectStatus_TextView_textSize"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_action_progress"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey_400"
            android:gravity="center_horizontal|center"
            android:padding="8dp"
            android:src="@drawable/button_original_press" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey_400"
            android:padding="8dp"
            android:src="@drawable/button_previous_press" />

        <ImageButton
            android:id="@+id/action_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey_400"
            android:padding="8dp"
            android:src="@drawable/ic_action_search" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey_400"
            android:padding="8dp"
            android:src="@drawable/button_next_press" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey_400"
            android:padding="8dp"
            android:src="@drawable/button_final_press" />
    </LinearLayout>


</FrameLayout>
